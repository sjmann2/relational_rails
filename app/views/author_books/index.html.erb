<%= button_to "All Books", "/books", method: :get %>
<%= button_to "All Authors", "/authors", method: :get %>
<%= button_to "Create Book",  "/authors/#{@author.id}/books/new", method: :get %>

<%= form_with url: "/authors/#{@author.id}/books", method: :get, local: true do |form| %>
  <%= form.label :length %>
  <%= form.text_field :length %>
  <%= form.submit "Display books longer than 'length'" %>
<% end %>

<h1>Books by <%= "#{@author.name}"%> </h1>
  <% @books.each do |book| %>
  <h3>Name: <%= book.name %></h3>
  <p>Length: <%= book.length %></p>
  <p>In_print?: <%= book.in_print %></p>
  <p>Created At: <%= book.created_at %></p>
  <p>Updated At: <%= book.updated_at %></p>
  <p>ID: <%= book.id %></p>
  <%= link_to "Update Book", "/books/#{book.id}/edit" %>
  <%= link_to "Delete Book", "/books/#{book.id}", method: :delete %>
<% end %>
<p><%= link_to "Sort Books Alphabetically", "/authors/#{@author.id}/books?sort=name"%></p>
