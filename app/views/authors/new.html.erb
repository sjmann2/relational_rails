<%= form_with url: '/authors', method: :post, local: true do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name, required: :true %>
  <%= form.label :age_when_first_published %>
  <%= form.text_field :age_when_first_published, require: :true %>
  <%= form.label :currently_alive_true, "Currently alive" %>
  <%= form.radio_button :currently_alive, "true" %>
  <%= form.label :currently_alive_false, "Deceased" %>
  <%= form.radio_button :currently_alive, "false" %>
  <%= form.submit "Create Author" %>
<% end %>
