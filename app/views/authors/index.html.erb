<%= link_to "All Books", "/books" %>
<%= link_to "All Authors", "/authors" %>
<%= link_to "New Author", "/authors/new" %>
<%= link_to "Sort authors by number of books", "/authors?sort=true" %>

<h1>Authors</h1>
<% @authors.each do |author| %>
  <h3><%= author.name %></h3>
  <p><%= author.created_at %></p>
  <p>Number of Books: <%= author.book_count %></p>
  <%= link_to "Update #{author.name}", "/authors/#{author.id}/edit" %>
  <%= link_to "Delete #{author.name}", "/authors/#{author.id}", method: :delete %>
  <%= link_to "All Books by #{author.name}", "/authors/#{author.id}/books" %>
<% end %>


